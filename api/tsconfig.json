{
  "compilerOptions": {

    /* Language and Environment */
    "target": "ES2023",                                  
    "lib": ["ES2023"],                                       
    
    /* Modules */
    "module": "Node16",                                
    "baseUrl": "./",                                  
    "paths": {
      "@/*": [
        "./src/*",
        "./src/lib/*"
      ]
    },                                     
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           

    /* Type Checking */
    "strict": true,                                      
    "skipLibCheck": true                                 
  }
}
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id String @id @default(cuid())

  name    String
  surname String
  email   String
  cpf     Int

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  address Address[]

  @@unique([email, cpf])
}

model Address {
  id String @id @default(cuid())

  street    String
  addressee String
  city      String
  state     String
  zip_code  Int

  resident Client @relation(fields: [clientId], references: [id])
  clientId String
}

model Item {
  id String @id @default(cuid())

  title       String
  piece       Int
  imageURL    Json
  description String
  about       String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
